{
  "root": true,
  "env": {
      "browser": true,
      "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
      "prettier/prettier": [
          "error", {
            "printWidth": 80,
            "trailingComma": "es5",
            "semi": true,
            "jsxSingleQuote": true,
            "singleQuote": true,
            "useTabs": true,
            "endOfLine": "auto",
            "max-len": ["error", { "code": 80 }],
            "importOrder": [
              "^react(.*)$",
              "<THIRD_PARTY_MODULES>",
              "@/navigation/(.*)$",
              "@/components/(.*)$",
              "@/shared/(.*)$",
              "^@/types/(.*)$",
              "^../(.*)$",
              "^./(.*)$"
            ],
            "importOrderSeparation": true,
            "importOrderSortSpecifiers": true
          }
        ],
        "@typescript-eslint/no-namespace": "off",
        "no-duplicate-imports": "error"
  }
}
